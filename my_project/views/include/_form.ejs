 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_expense">
    <div class="new_user">
        <div class="form-group">
            <label for="date" class="text-light">Date</label>
            <input type="date" name="date">
        </div>
        <div class="form-group">
            <label for="cost" class="text-light">Cost</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="cost" >
        </div>
        <div class="form-group">
            <label for="category" class="text-light">Category</label>
            <select name="category" id="categories">
                <option value="Entertainment">Entertainment</option>
                <option value="Leisure">Leisure </option>
                <option value="Tourism">Tourism</option>
                <option value="Flights">Flights</option>
                <option value="Cosmetics">Cosmetics</option>
                <option value="Medicine">Medicine</option>
                <option value="Consumption">Consumption</option>
                <option value="Food">Food</option>
                <option value="Government">Government</option>
                <option value="other">Others</option>
            </select>
        </div> 
        
        <div class="form-group">
            <label for="date" class="text-light">Category</label>
            <select name="date_month" id="months">
                <option value="1">January</option>
                <option value="2">February </option>
                <option value="3">March</option>
                <option value="4">April</option>
                <option value="5">May</option>
                <option value="6">June</option>
                <option value="7">July</option>
                <option value="8">August</option>
                <option value="9">September</option>
                <option value="10">October</option>
                <option value="11">November</option>
                <option value="12">December</option>
            </select>
        </div> 

        <div class="form-group">
            <label for="description" class="text-light">Description</label>
            <input type="text" name="description" >
        </div>


        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>